{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "moduleResolution": "node",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    "lib": ["es2015", "es2016", "es2017", "dom", "es2018"],
    "baseUrl": ".",
    "paths": {
      "@template-data/*": ["data_templates/*"]
    }
  },
  
  "typeRoots": [
    "/node_modules/@overwolf/ow-electron-packages-types",
    "/node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "test",
    ".webpack",
    "**/*spec.ts"
  ],

  "include": ["src/**/*.ts", "src/globals.d.ts"]
}
